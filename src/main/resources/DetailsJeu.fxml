<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.DetailsJeuController"
            style="-fx-background-color: #f5f6fa;">

    <!-- IMAGE EN HAUT -->
    <top>
        <StackPane>
            <ImageView fx:id="imageView"
                       fitHeight="300"
                       preserveRatio="true" />
        </StackPane>
    </top>

    <!-- CONTENU -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">

            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label fx:id="typeLabel"
                       style="-fx-font-size: 28px; -fx-font-weight: bold;" />

                <Label fx:id="niveauLabel"
                       style="-fx-padding: 6 15;
                              -fx-background-radius: 20;
                              -fx-text-fill: white;" />
            </HBox>



            <Label text="Description"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <Label fx:id="descriptionLabel"
                   wrapText="true"
                   style="-fx-font-size: 15px;" />

            <HBox spacing="15">
                <Button text="ðŸŽ® Jouer"
                        style="-fx-background-color: #2ecc71;
                               -fx-text-fill: white;
                               -fx-font-size: 14px;
                               -fx-background-radius: 8;"
                        onAction="#jouerQuiz"
                        styleClass="btn-play"/>

                <Button text="Retour"
                        onAction="#retour"
                        style="-fx-background-color: #3498db;
                               -fx-text-fill: white;
                               -fx-background-radius: 8;" />
            </HBox>

        </VBox>
    </center>

</BorderPane>
